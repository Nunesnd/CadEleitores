@model List<PessoaModel>
@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">

    <h1>Listagem de contatos</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Novo contato</a>
    </div>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Sexo</th>
                <th scope="col">Nascimento</th>
                <th scope="col">Filhos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (PessoaModel pessoa in Model)
                {
                    <tr>
                        <th scope="row">@pessoa.Id</th>
                        <td>@pessoa.Nome</td>
                        <td>@pessoa.Sexo</td>
                        <td>@pessoa.Nascimento</td>
                        <td>@pessoa.Filhos</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@pessoa.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-info" asp-route-id="@pessoa.Id"  asp-controller="Contato" asp-action="Detalhes">Detalhes</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@pessoa.Id"    asp-controller="Contato" asp-action="ApagarConfirma">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>