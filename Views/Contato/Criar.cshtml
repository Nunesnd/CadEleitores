@model PessoaModel
@{
    ViewData["Title"] = "Cadastrar contato";
}

<h1>Novo contato - Dados pessoais</h1>

<br />

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="row g-3" method="get" action=".">

        <div class="col-sm-6">
            <input asp-for="Nome" type="text" class="form-control" placeholder="Nome completo" id="nome">
        </div>

        <div class="col-sm-2">
            <input asp-for="Pseudonimo" type="text" class="form-control" placeholder="Pseudonimo" id="pseudonimo">
        </div>

        <div class="col-sm-2">
            <input asp-for="Cpf" type="text" class="form-control" placeholder="CPF" id="cpf">
        </div>

    </div>

    <br />

    <div class="row g-3" method="get" action=".">

        <div class="col-sm-2" id="sexo">
            <select asp-for="Sexo" class="form-select">
                <option selected>Sexo</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
            </select>
        </div>

        <div class="col-sm-2">
            <input asp-for="Nascimento" type="text" class="form-control" placeholder="Nascimento" id="nascimento">
        </div>

        <div class="col-sm-2" id="filhos">
            <select asp-for="Filhos" class="form-select">
                <option selected>Tem filhos?</option>
                <option value="Não">Não</option>
                <option value="Sim">Sim</option>
            </select>
        </div>
        
        <div class="col-sm-3">
            <input type="text" class="form-control" placeholder="Profissão" id="profissao">
        </div>

    </div>

    <br />

    <div class="d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>