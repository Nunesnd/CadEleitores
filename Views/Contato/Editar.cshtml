@{
    ViewData["Title"] = "Editar contato";
}

<h1>Editar contato - Dados pessoais</h1>

<br />

<form>

    <div class="row g-3" method="get" action=".">

        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder="Nome completo" id="nome">
        </div>

        <div class="col-sm-2">
            <input type="text" class="form-control" placeholder="Pseudonimo" id="pseudonimo">
        </div>

        <div class="col-sm-2">
            <input type="text" class="form-control" placeholder="CPF" id="cpf">
        </div>

    </div>
    
    <br />

    <div class="row g-3" method="get" action=".">

        <div class="col-sm-2">
            <select class="form-select">
                <option selected>Sexo</option>
                <option value="1">Masculino</option>
                <option value="2">Feminino</option>
            </select>
        </div>

        <div class="col-sm-2">
            <input type="text" class="form-control" placeholder="Nascimento" id="nascimento">
        </div>

        <div class="col-sm-2">
            <select class="form-select">
                <option selected>Tem filhos?</option>
                <option value="1">Não</option>
                <option value="2">Sim</option>
            </select>
        </div>

        <div class="col-sm-3">
            <input type="text" class="form-control" placeholder="Profissão" id="profissao">
        </div>

    </div>

    <br />

    <div class="d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-primary btn-block" asp-controller="Contato" asp-action="EditarEndereco">Atualizar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>