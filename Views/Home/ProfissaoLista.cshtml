@model List<ProfissaoModel>
@{
    ViewData["Title"] = "Lista de profissões";
}

<div class="text-center">

    <h1>Lista de profissões</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Home" asp-action="Profissao">Nova profissão</a>
    </div>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (ProfissaoModel profissao in Model)
                {
                    <tr>
                        <th scope="row">@profissao.Id</th>
                        <td>@profissao.NomeProfissao</td>
                        <td>
                            <div class="btn-group" role="group">
                                
                                <a role="button" class="btn btn-danger" asp-route-id="@profissao.Id" asp-controller="Contato" asp-action="Index">Apagar</a>

                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>